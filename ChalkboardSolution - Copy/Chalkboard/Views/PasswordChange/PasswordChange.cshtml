
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!--Global CSS files -->
    <link rel="stylesheet" href="assets/css/style.css">
    <!--media query related css-->
    <link rel="stylesheet" href="assets/css/device.css">
    <title>Chalkboard - Manage Password</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="edit_profile_page">

                    <!--global header-->
                    <div class="globalHeader">
                        <!--top right side section-->
                        <div class="profile_section">
                            <div class="badgeIcon">
                                <img src="assets/images/badge.png" class="img-fluid">
                            </div>

                            <div class="nameBlock mr-10">
                                <p class="user_name">Jade Anderson</p>
                                <p class="user_level">Learner</p>
                            </div>

                            <div class="profileIconBlock">
                                <a href="#">
                                    <img src="assets/images/profile_pic.png"
                                         class="img-fluid profileIcon">
                                </a>
                            </div>

                            <div class="logout mr-10">
                                <a href="#" class="no-anchor">
                                    Logout
                                    <img src="assets/images/logout.png"
                                         class="img-fluid">
                                </a>
                            </div>
                        </div>
                        <!--top right side section ends here-->
                        <!--logo block-->
                        <div class="text-center cb_logoBlock">
                            <img src="assets/images/cblogo.png" class="img-fluid chalkboard_logo">
                            <h4 class="chalkboard_label">Chalkboard</h4>
                        </div>
                        <!--logo block ends here-->
                    </div>
                    <!--global header ends here-->


                    <div class="edit_profile_wrapper mt-30">
                        <div class="row no-gutters">
                            <div class="col-3">
                                <div class="left_side_wrapper pt-30">
                                    <ul class="list-unstyled">
                                        <li>
                                            <a href="edit-profile.html" class="no-anchor">
                                                ADD/EDIT PROFILE
                                            </a>
                                        </li>
                                        <li class="active">
                                            <a href="manage-password.html" class="no-anchor">
                                                MANAGE PASSWORD
                                            </a>
                                        </li>
                                        <li>
                                            <a href="profiles.html" class="no-anchor">
                                                PROFILES
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-9">
                                <div class="right_side_wrapper">
                                    <!--header-->
                                    <div class="row align-items-center justify-content-center no-gutters">
                                        <div class="col header_line"></div>
                                        <div class="col-auto">
                                            <h4 class="d-inline-block">Manage Password</h4>
                                        </div>
                                        <div class="col header_line"></div>
                                    </div>
                                    <!--header ends here-->
                                    @using (Html.BeginForm("SetChange", "PasswordChangeController", new { }, FormMethod.Post, new { id = "FormLogin", autocomplete = "off" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <!--<form class="manage_password_form">-->

                                        <div class="form-group row mt-30 mb-30">
                                            <label for="inputOldPassword" class="col-md-4 col-form-label">Old Password</label>
                                            <div class="col-md-8">
                                                <input type="password" class="form-control custom_form_control" id="inputOldPassword">
                                            </div>
                                        </div>

                                        <div class="form-group row mb-30">
                                            <label for="inputNewPassword" class="col-md-4 col-form-label">New Password</label>
                                            <div class="col-md-8">
                                                <input type="password" class="form-control custom_form_control" id="inputNewPassword">
                                            </div>
                                        </div>

                                        <div class="form-group row mb-30">
                                            <label for="inputConfirmPassword" class="col-md-4 col-form-label">Confirm New Password</label>
                                            <div class="col-md-8">
                                                <input type="password" class="form-control custom_form_control" id="inputConfirmPassword">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-4"></div>
                                            <div class="col-auto">

                                                <button type="submit" class="btn btn-dark cb_btn mt-20" id="btnLogIn">Change Password</button>


                                                <a href="#" class="mt-30 d-block">Forgot Password?</a>
                                            </div>
                                        </div>

                                        <!--</form>-->
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="assets/js/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="assets/js/script.js"></script>
</body>

</html>